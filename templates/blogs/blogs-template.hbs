<h1>Blog</h1>
      {{#each data}}
        <div class="clearfix py-3">
          <!-- name -->
          <h3>{{name}}</h3>
          <!-- detail update -->
          <p class="text-black-50">
            by
            {{author}}
            in
            <a
              href="#"
              onclick="loadBlogsPage('blogs/categories/{{categoryId}}')"
            >{{category.name}}</a>
            on
            {{formatDate date}}.
            <a
              href="#blogs/{{id}},true"
              onclick="loadDetailsBlog({{id}}, true)"
            >Comment ({{comments.length}})</a>
          </p>

          <img
            src="{{thumbpath}}"
            class="img-thumbnail rounded-4 float-start me-3 my-1"
            alt="{{name}}"
          />
          <p class="text-black-50">
            {{summary}}
          </p>
          <a href="#blogs/{{id}}, false" class="btn btn-link readmore ps-0" onclick="loadDetailsBlog({{id}},false)">Read more</a>
        </div>
      {{/each}}

      {{#pagination currentPage pageCount}}
        <nav aria-label="Page navigation">
          <ul class="pagination">
            {{#each pages}}
              {{#if isCurrent}}
                <li class="page-item disabled" aria-current="page">
                  <a class="page-link" href="#" onclick="loadBlogsPage('{{../../request}}',{{page}})">{{page}}</a>
                </li>
              {{/if}}
              {{#unless isCurrent}}
                <li class="page-item">
                  <a class="page-link" href="#" onclick="loadBlogsPage('{{../../request}}',{{page}})">{{page}}</a>
                </li>
              {{/unless}}
            {{/each}}
          </ul>
        </nav>
      {{/pagination}}